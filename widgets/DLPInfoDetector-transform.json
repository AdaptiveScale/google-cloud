
{
  "metadata": {
    "spec-version": "1.6"
  },
  "display-name": "DLP InfoType Detector",
  "configuration-groups": [
    {
      "label": "Input Configuration",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Field",
          "name": "field",
          "widget-attributes" : {
            "placeholder" : "Input field that needs to be applied DLP"
          }
        }
      ]
    },
    {
      "label": "Data Loss Prevention Configuration",
      "properties" : [
        {
          "name": "max-findings",
          "label" : "Maximum Findings",
          "widget-type": "number",
          "widget-attributes": {
            "default": "100",
            "min": "1",
            "max": "1000"
          }
        },
        {
          "widget-type": "select",
          "label": "Minimum Likelihood",
          "name": "minimum-likelihood",
          "widget-attributes" : {
            "values" : [
              "Unspecified",
              "Very Unlikely",
              "Unlikely",
              "Possible",
              "Likely",
              "Very Likely",
              "Unrecognized"
            ],
            "default" : "Possible"
          }
        },
        {
          "name": "include-quote",
          "widget-type": "radio-group",
          "label" : "Include Quote",
          "widget-attributes": {
            "layout": "inline",
            "default": "yes",
            "options": [
              {
                "id": "yes",
                "label": "Yes"
              },
              {
                "id": "no",
                "label": "No"
              }
            ]
          }
        },
        {
          "name": "info-types",
          "widget-type": "multi-select",
          "label": "Information Types",
          "widget-attributes": {
            "delimiter": ",",
            "defaultValue": [
              "ALL_BASIC"
            ],
            "options": [
              {
                "id":"AGE",
                "label": "Age"
              },
              {
                "id": "ALL_BASIC",
                "label": "All Basic"
              },
              {
                "id":"CREDIT_CARD_NUMBER",
                "label": "Credit Card Number"
              },
              {
                "id":"DATE",
                "label": "Date"
              },
              {
                "id":"DATE_OF_BIRTH",
                "label": "Date of birth"
              },
              {
                "id":"DOMAIN_NAME",
                "label": "Domain Name"
              },
              {
                "id":"ETHNIC_GROUP",
                "label": "Ethnic Group"
              },
              {
                "id":"FEMALE_NAME",
                "label": "Female Name"
              },
              {
                "id":"FIRST_NAME",
                "label": "First Name"
              },
              {
                "id":"GCP_CREDENTIALS",
                "label": "GCP Credentials"
              },
              {
                "id":"GENDER",
                "label": "Gender"
              },
              {
                "id":"IBAN_CODE",
                "label": "IBAN Code"
              },
              {
                "id":"ICD9_CODE",
                "label": "ICD9 Code (Health)"
              },
              {
                "id":"ICD10_CODE",
                "label": "ICD10 Code (Health)"
              },
              {
                "id":"IMEI_HARDWARE_ID",
                "label": "IMEI Hardware Id"
              },
              {
                "id":"IP_ADDRESS",
                "label": "IP Address"
              },
              {
                "id":"LAST_NAME",
                "label": "Last Name"
              },
              {
                "id":"LOCATION",
                "label": "Location"
              },
              {
                "id":"MAC_ADDRESS",
                "label": "MAC Address"
              },
              {
                "id":"MAC_ADDRESS_LOCAL",
                "label": "MAC Address Local"
              },
              {
                "id":"MALE_NAME",
                "label": "Male Name"
              },
              {
                "id":"PERSON_NAME",
                "label": "Person Name"
              },
              {
                "id":"PHONE_NUMBER",
                "label": "Phone number"
              },
              {
                "id":"SWIFT_CODE",
                "label": "Swift Code"
              },
              {
                "id":"TIME",
                "label": "Time"
              },
              {
                "id":"URL",
                "label": "Url"
              }
            ]
          }
        }
      ]
    },
    {
      "label" : "Credentials",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Service Account Path",
          "name": "serviceFilePath",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Project Id",
          "name": "project",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "map<string, string>"
        ],
        "schema-default-type": "string"
      }
    }
  ]
}
