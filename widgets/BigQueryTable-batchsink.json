{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name" : "BigQuery",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName",
          "widget-attributes" : {
            "placeholder": "Name used to identify this sink for lineage"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Project ID",
          "name": "project",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Dataset",
          "name": "dataset",
          "widget-attributes" : {
            "placeholder": "Dataset the table belongs to"
          }
        },
        {
          "name": "create-dataset-if-not-exist",
          "widget-type": "radio-group",
          "label": "Create Dataset",
          "widget-attributes": {
            "layout": "inline",
            "default": "no",
            "options": [
              {
                "id": "yes",
                "label": "Yes"
              },
              {
                "id": "no",
                "label": "No"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Table",
          "name": "table",
          "widget-attributes" : {
            "placeholder": "Table to write to"
          }
        },
        {
          "name": "create-table-if-not-exist",
          "widget-type": "radio-group",
          "label":"Create Table",
          "widget-attributes": {
            "layout": "inline",
            "default": "no",
            "options": [
              {
                "id": "yes",
                "label": "Yes"
              },
              {
                "id": "no",
                "label": "No"
              }
            ]
          }
        }
      ]
    },
    {
      "label" : "Advanced",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Service Account File Path",
          "name": "serviceFilePath",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        },
        {
          "name": "truncate-table",
          "widget-type": "radio-group",
          "label": "Truncate table",
          "widget-attributes": {
            "layout": "inline",
            "default": "no",
            "options": [
              {
                "id": "yes",
                "label": "Yes"
              },
              {
                "id": "no",
                "label": "No"
              }
            ]
          }
        },
        {
          "widget-type": "textbox",
          "label": "Cloud KMS key",
          "name": "kms-key",
          "widget-attributes" : {
            "placeholder": "Cloud KMS key to be used to protect destination table"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Temporary Bucket Name",
          "name": "bucket",
          "widget-attributes" : {
            "placeholder": "Google Cloud Storage bucket for temporary data"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "timestamp",
          "bytes",
          "string"
        ],
        "schema-default-type": "string"
      }
    }
  ],
  "jump-config": {
    "datasets": [
      {
        "ref-property-name": "referenceName"
      }
    ]
  }
}
