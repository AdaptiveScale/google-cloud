
{
  "metadata": {
    "spec-version": "1.6"
  },
  "display-name": "PII Filter",
  "configuration-groups": [
    {
      "label": "Input",
      "properties" : [
        {
          "name": "entire-record",
          "label": "Filter on",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "record",
            "options": [
              {
                "id": "field",
                "label": "Field (Field name below)"
              },
              {
                "id": "record",
                "label": "Record"
              }
            ]
          }
        },
        {
          "widget-type": "input-field-selector",
          "label": "Field",
          "name": "field",
          "plugin-function": {
            "method": "POST",
            "label": "Create output schema",
            "widget": "outputSchema",
            "output-property": "schema",
            "plugin-method": "outputSchema",
            "position": "bottom",
            "button-class": "btn-hydrator"
          }
        }
      ]
    },
    {
      "label": "Sensitive Data",
      "properties" : [
        {
          "name": "filter-confidence",
          "label": "Detect confidence",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "high",
            "options": [
              {
                "id": "low",
                "label": "Low"
              },
              {
                "id": "medium",
                "label": "Medium"
              },
              {
                "id": "high",
                "label": "High"
              }
            ]
          }
        },
        {
          "name": "sensitive-types",
          "widget-type": "multi-select",
          "label": "Sensitive Types",
          "widget-attributes": {
            "delimiter": ",",
            "defaultValue": [
              "DEMOGRAPHIC",
              "CREDIT_CARD",
              "DRIVER_LICENSE"
            ],
            "options": [
              {
                "id": "DEMOGRAPHIC",
                "label": "Demographics"
              },
              {
                "id": "LOCATION",
                "label": "Location"
              },
              {
                "id": "TAX",
                "label": "Tax IDs"
              },
              {
                "id": "CREDIT_CARD",
                "label" : "Credit Card Numbers"
              },
              {
                "id": "PASSPORT",
                "label": "Passport Numbers"
              },
              {
                "id": "HEALTH",
                "label": "Health IDs"
              },
              {
                "id": "NATIONAL_ID",
                "label": "National Identification"
              },
              {
                "id": "DRIVER_LICENSE",
                "label": "Driver License IDs"
              },
              {
                "id": "INSURANCE",
                "label": "Insurance Numbers"
              }
            ]
          }
        }
      ]
    },
    {
      "label" : "Error Handling",
      "properties" : [
        {
          "name": "on-error",
          "label": "On error",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "inline",
            "default": "send-to-error",
            "options": [
              {
                "id": "stop-on-error",
                "label": "Stop pipeline"
              },
              {
                "id": "skip-record",
                "label": "Skip record"
              },
              {
                "id": "send-to-error",
                "label": "Send to error"
              }
            ]
          }
        }
      ]
    },
    {
      "label" : "Credentials",
      "properties" : [
        {
          "widget-type": "textbox",
          "label": "Service Account Path",
          "name": "serviceFilePath",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Project Id",
          "name": "project",
          "widget-attributes" : {
            "default": "auto-detect"
          }
        }
      ]
    }
  ],
  "emit-errors": true,
  "outputs": []
}
